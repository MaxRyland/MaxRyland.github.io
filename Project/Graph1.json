{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/MaxRyland/MaxRyland.github.io/main/Project/GDP_LE_JOINED%20DATA.csv"
    },
  
    "height": 300,
    "width": 300,
  
  "title": {
        "text": "GDP and Life Expectency",
    
        "subtitle":["Linear regression of life expectency at birth on GDP/capita,","in USD, 2019. Source: OECD "],
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "white",
        "subtitleColor":"white"
            },
  
  
    "config": {
        "background":"#2a364f",
        "view": {
          "stroke": "transparent"}},
  
    "layer": [
      {
        "mark": {
          "type": "point",
          "filled": true,
          "color": "white"
        },
        "encoding": {
          "x": {
            "field": "GDP Value",
            "type": "quantitative",
            "axis": {
              "titleColor": "white",
            "grid": false,
            "labelColor":"white"}
          },
          "y": {
            "field": "LE Value",
            "type": "quantitative",
            "scale": {"domain": [70, 90]},
            "axis": {
            "titleColor": "white",
            "grid": false,
            "labelColor":"white"}
          },
          "tooltip": [
        {
          "field": "LOCATION",
          "type": "nominal",
          "title": "Country"
        },
        
        {
          "field": "LE Value",
          "type": "quantitative",
          "title": "Life Expectency "
        },
  
        {
          "field": "GDP Value",
          "type": "quantitative",
          "title": "GDP/capita "
        }
        
      ]
  
     
  
        }
      },
      {
        "mark": {
          "type": "line",
          "color": "red"
        },
        "transform": [
          {
            "regression": "LE Value",
            "on": "GDP Value"
          }
        ],
        "encoding": {
          "x": {
            "field": "GDP Value",
            "type": "quantitative",
            "title": "GDP/capita "
          },
          "y": {
            "field": "LE Value",
            "type": "quantitative",
            "title": "Life Expectency at birth "
          }
  
        
        }
      }
    ]
}
